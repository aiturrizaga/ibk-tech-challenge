/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@ibk/*": [
        "app/*"
      ],
      "@ibk/env/*": [
        "environments/*"
      ],
      "@ibk/shared/*": [
        "app/shared/*"
      ],
      "@ibk/core/*": [
        "app/core/*"
      ],
      "@ibk/layout/*": [
        "app/layout/*"
      ]
    },
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
